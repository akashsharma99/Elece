<%- include('partials/header.ejs') %>

<section id="profile">

    <div class="container">
        <h1>Profile</h1>
        <div class="wrapper span-1-of-1 flex-wrap">
            <div class="profile-img">
                <img src="<%= user.picture %>" alt="">
            </div>
            <div class="profile-bio">
                <h2>
                    <%= user.name %>
                </h2>
                <p><%= user.bio %></p>
                <% if (!hideEdit) { %> 
                    <a class="btn" href="/profile/edit">Edit Profile</a>
                    <a class="btn" href="/profile/logout">Logout</a>
                <% } %>
            </div>
        </div>
